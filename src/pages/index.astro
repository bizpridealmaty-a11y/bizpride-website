    <script>
        // Nav scroll
        const nav = document.getElementById('nav');
        window.addEventListener('scroll', () => nav.classList.toggle('scrolled', window.scrollY > 50));

        // Reveal on scroll
        const reveals = document.querySelectorAll('.reveal');
        const observer = new IntersectionObserver(entries => {
            entries.forEach(entry => { if (entry.isIntersecting) entry.target.classList.add('visible'); });
        }, { threshold: 0.08, rootMargin: '0px 0px -40px 0px' });
        reveals.forEach(el => observer.observe(el));

        // Smooth scroll + close menu
        document.querySelectorAll('a[href^="#"]').forEach(a => {
            a.addEventListener('click', e => {
                e.preventDefault();
                const t = document.querySelector(a.getAttribute('href'));
                if (t) { t.scrollIntoView({ behavior: 'smooth', block: 'start' }); closeMobileMenu(); }
            });
        });

        // Mobile menu
        const burger = document.getElementById('burger');
        const mobileMenu = document.getElementById('mobileMenu');
        function closeMobileMenu() { burger.classList.remove('active'); mobileMenu.classList.remove('open'); document.body.style.overflow = ''; }
        burger.addEventListener('click', () => {
            const open = mobileMenu.classList.contains('open');
            if (open) closeMobileMenu();
            else { burger.classList.add('active'); mobileMenu.classList.add('open'); document.body.style.overflow = 'hidden'; }
        });
        document.querySelectorAll('.mobile-menu a').forEach(l => l.addEventListener('click', closeMobileMenu));
        document.addEventListener('keydown', e => { if (e.key === 'Escape') closeMobileMenu(); });

        // Animated counter
        function animateCounters() {
            document.querySelectorAll('[data-count]').forEach(el => {
                const target = parseInt(el.dataset.count);
                const suffix = el.dataset.suffix || '';
                let current = 0;
                const step = Math.max(1, Math.floor(target / 40));
                const timer = setInterval(() => {
                    current += step;
                    if (current >= target) { current = target; clearInterval(timer); }
                    el.textContent = current + suffix;
                }, 30);
            });
        }
        const statsObs = new IntersectionObserver(entries => {
            entries.forEach(entry => {
                if (entry.isIntersecting) { animateCounters(); statsObs.disconnect(); }
            });
        }, { threshold: 0.3 });
        const statsElements = document.querySelectorAll('.stats-bar, .fmt-stats-block');
        statsElements.forEach(el => statsObs.observe(el));

        // ‚ïê‚ïê‚ïê GALLERY ‚ïê‚ïê‚ïê
        let currentPhotos = [];
        let currentPhotoIdx = 0;

        function openAlbum(card) {
            const driveUrl = card.dataset.drive;
            // If Google Drive link is set, open it directly
            if (driveUrl) { window.open(driveUrl, '_blank'); return; }
